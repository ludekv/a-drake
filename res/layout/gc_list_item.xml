<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="7dp" 
    android:background="@drawable/list_background">

	<TextView
	    android:id="@+id/item_name"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_vertical"
		android:drawableLeft="@drawable/ic_cache_trad"
		android:drawablePadding="2dp"
	    android:singleLine="true"
	    android:text="Name"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textSize="18dp"
	    android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/item_lsecond"
	    android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:weightSum="32">
              
        <TextView
            android:id="@+id/item_owner"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="12"
            android:singleLine="true"
            android:text="Owner"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/item_ldt"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="7"
	        android:layout_gravity="center_vertical"
            android:orientation="vertical" >

	        <TextView
	            android:id="@+id/item_diff"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:padding="0dp"
	            android:singleLine="true"
	            android:text="D: "
		        android:layout_gravity="center_vertical"
		        android:drawableRight="@drawable/ic_stars15"
	            android:textSize="8dp" />               
                
	        <TextView
	            android:id="@+id/item_terr"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:padding="0dp"
	            android:singleLine="true"
	            android:text="T: "
		        android:layout_gravity="center_vertical"
		        android:drawableRight="@drawable/ic_stars15"
	            android:textSize="8dp"/>
	        
        </LinearLayout>       
        
        <ImageView
            android:id="@+id/item_size"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
            android:src="@drawable/ic_size_r"
            android:layout_weight="3" />

        <ImageView
            android:id="@+id/item_direction"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_e"
            android:layout_weight="3" />
        
        <TextView
            android:id="@+id/item_distance"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="7"
            android:singleLine="true"
            android:text="Dist"
            android:textSize="14dp" />
        
	</LinearLayout>    
</LinearLayout>