<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_cache64_trad"
            android:drawablePadding="5dp"
            android:text="Large Text" />

        <LinearLayout
            android:id="@+id/item_lsecond"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="32" >

            <TextView
                android:id="@+id/item_code"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="12"
                android:singleLine="true"
                android:text="Code"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/item_ldt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="7"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_diff"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/ic_stars15"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:text="D: "
                    android:textSize="8dp" />

                <TextView
                    android:id="@+id/item_terr"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/ic_stars15"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:text="T: "
                    android:textSize="8dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/item_size"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:src="@drawable/ic_size_r" />

            <ImageView
                android:id="@+id/item_direction"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:src="@drawable/ic_arrow_e" />

            <TextView
                android:id="@+id/item_distance"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="7"
                android:singleLine="true"
                android:text="Dist"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_lthird"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
	        <TextView
	            android:id="@+id/item_owner"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Owner"
	            android:textAppearance="?android:attr/textAppearanceSmall" 
	            android:layout_weight="1" />

	        <TextView
	            android:id="@+id/item_fav"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="FP"
	            android:drawableLeft="@drawable/ic_fav_point"
	            android:drawablePadding="5dip"
	            android:textAppearance="?android:attr/textAppearanceSmall" 
	            android:layout_weight="1" />
	        
		</LinearLayout>

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/item_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:id="@+id/item_coords"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coords" />

        <Button
            android:id="@+id/btn_hint"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_hint_show" />

        <TextView
            android:id="@+id/item_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dip"
            android:text="Hint"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/item_attr1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_attr2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>
            
        <LinearLayout
            android:id="@+id/item_attr3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >            
        </LinearLayout>

        <Button
            android:id="@+id/btn_navigate"
            style="@style/menuButton"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:drawableTop="@drawable/ic_det_compass"
            android:text="@string/det_navigate"
            android:textSize="12dp" />

<!--             android:background="@drawable/menu_button" -->
        
	</LinearLayout>

</ScrollView>